&FORCE_EVAL
    METHOD Quickstep
    &PRINT
        &FORCES
        &END
    &END
    &DFT
        BASIS_SET_FILE_NAME EMSL_BASIS_SETS
        POTENTIAL_FILE_NAME POTENTIAL
        !AUTO_BASIS RI_HFX HUGE
        LSD
        &MGRID
            CUTOFF 200
            REL_CUTOFF 50
        &END MGRID
        &QS
            METHOD GAPW
        &END QS
        &SCF
            EPS_SCF 1.0E-7
            SCF_GUESS ATOMIC
            MAX_SCF 100
        &END SCF
        &XC
            &XC_FUNCTIONAL NONE
            &END XC_FUNCTIONAL
            &HF
                &INTERACTION_POTENTIAL
                    POTENTIAL_TYPE TRUNCATED
                    CUTOFF_RADIUS 2.0
                &END
                &RI T
                    EPS_FILTER 1.0E-13
                    EPS_PGF_ORB 1.0E-13
                    MEMORY_CUT 1
                &END
            &END
        &END XC
    &END DFT
    &SUBSYS
        &CELL
            ABC 5.0 5.0 5.0
        &END CELL
        &COORD
            C   0.000000    0.000000    0.1581
            H   0.000000    0.000000    -0.9487
        &END COORD
        &KIND H
            BASIS_SET 6-31Gx
            POTENTIAL ALL
        &END KIND
        &KIND C
            BASIS_SET 6-31Gx
            POTENTIAL ALL
        &END KIND
    &END SUBSYS
&END FORCE_EVAL
&GLOBAL
    PROJECT CH-hfx-md
    RUN_TYPE MD
    PRINT_LEVEL MEDIUM
&END GLOBAL
&MOTION
    &MD
        TEMPERATURE [K] 300
        TIMESTEP 0.5
        STEPS    100
    &END
&END
